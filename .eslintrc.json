{
  "extends": ["eslint:recommended", "next"],
  "plugins": [
    // ...
    "react-hooks"
  ],
  "rules": {
    // ...
    //"react-hooks/rules-of-hooks": "warn", // Checks rules of Hooks
    //"react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
    "no-unused-vars" : ["error", { 
        "args": "none"
        , "vars": "local"
        , "ignoreRestSiblings": true
        , "caughtErrors": "none" }]
  }
}
